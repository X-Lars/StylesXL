<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StylesXL">

    <!-- Merges the specified dictionaries containing custom control styles into Themes\Generic.xaml -->
    <ResourceDictionary.MergedDictionaries>
        
        <!-- MERGE THE RESOURCES FOLDER FILES -->
        <ResourceDictionary Source="pack://application:,,,/StylesXL;Component/Resources/Colors/Generic.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/StylesXL;Component/Resources/Fonts/Generic.xaml"/>

        <!-- MERGE THE DEFAULT THEME -->
        <ResourceDictionary Source="pack://application:,,,/StylesXL;Component/Resources/Themes/Default.xaml"/>

        <!-- MERGE THE DEFAULT APPEARANCE -->
        <ResourceDictionary Source="pack://application:,,,/StylesXL;Component/Resources/Layouts/Default.xaml"/>

        <!-- MERGE THE DEFAULT CONTROL STYLES -->
        <ResourceDictionary Source="pack://application:,,,/StylesXL;Component/Resources/Controls/Generic.xaml"/>

    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>
